# Configurações dos Contratos Soroban
# IDs dos contratos deployados na rede Stellar

# ID do contrato Verifier Registry 
VERIFIER_REGISTRY_CONTRACT_ID=

# ID do contrato AdVault (principal)
ADVAULT_CONTRACT_ID=

# ID do contrato do Token (ADVT)
TOKEN_CONTRACT_ID=

# Chaves secretas para assinatura de transações
# Chave secreta do admin (para operações administrativas)
ADMIN_SECRET_KEY=

# Chave secreta do verifier (para attestar eventos)
VERIFIER_SECRET_KEY=

# Configurações de rede Stellar
STELLAR_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org

# URLs dos Contratos Deployados na AWS
# API dos contratos Soroban (para operações com contratos)
SOROBAN_CONTRACTS_API_URL=http://ec2-52-90-24-12.compute-1.amazonaws.com/contracts

# API da aplicação principal (health check e outros endpoints)
APPLICATION_API_URL=http://ec2-52-90-24-12.compute-1.amazonaws.com

# Configurações existentes
PORT=3000
API_BASE_URL=http://localhost:3000

# Para produção, definir com a URL pública da API
# API_BASE_URL=https://your-api-domain.com

# URL padrão para redirecionamento em caso de erro
DEFAULT_CLICK_REDIRECT_URL=https://example.com
